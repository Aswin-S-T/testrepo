{
    "apps": [{
        "name": "Envitus-PBMS-staging",
        "script": "Main.js",
        "cwd": ".",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "autorestart": true,
        "max_restarts": 10,
        "min_uptime": "90s",
        "exec_mode": "fork",
        "instances": 1,
        "watch": false,
        "env": {
            "PORT": 7001,
            "NODE_ENV": "staging",
            "PROJECT_TYPE": "PBMS",
            "FRONT_END_APP_ADDR": "http://localhost:3000",
            "DEFAULT_DEVICE_TYPE": "SPB001",
            "DB_Name": "SPB001",
            "DB_IP": "localhost:27017"
        }
    }, {
        "name": "AlarmService",
        "script": "AlarmService.js"
    }]
}